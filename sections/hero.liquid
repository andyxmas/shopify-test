
{% if section.settings.banner_image_file %}
    <img style="max-width: 100%; margin: 0 auto;" src="{{ section.settings.banner_image_file | img_url: '1600x300', crop: 'center', format: 'pjpg' }}" alt="" />
{% endif %}

{% schema %}

{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image_file",
      "label": "Select an image",
      "info": "Optionally select an image to be displayed as a banner. This will show on the top of the product page, and also in the cart."
    }
  ]
}
{% endschema %}
